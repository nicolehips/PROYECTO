<div class="container">
    <h1 class="text-center pt-5">Reportes suscriptor</h1>
    <h3 class="text-center">Consulta a los suscriptores y suscriptores morosos.</h3>
    <h5 class="pb-4">
        <div class="form-check form-switch pt-5">
            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Filtrar los suscriptores morosos</label>
        </div>
    </h5>
    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered">
            <thead class="table-dark text-center">
                <tr>
                    <th>Nombre</th>
                    <th>Cedula</th>
                    <th>Correo</th>
                    <th>Sucursal</th>
                    <th>Fecha de suscripci√≥n</th>
                    <th>Saldo pendiente</th>
                </tr>
            </thead>
            <tbody>
                <% suscriptores.forEach(function(user){ %>
                <tr> 
                    <td> <%- user.value.nombre %> </td>
                    <td> <%- user.value.cedula %> </td>
                    <td> <%- user.value.correo %> </td>
                    <td> <%- user.value.sucursal %> </td>
                    <td> <%- user.value.fechaDS %> </td>
                    <td> <%- user.value.moroso %> </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</div>
